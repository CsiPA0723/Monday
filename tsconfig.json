{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./out/**/*",
    "./.webpack/**/*",
    "./dist/**/*",
    "./node_modules/**/*"
  ]
}
